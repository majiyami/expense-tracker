<a href="./expenses/new" class="btn btn-warning">新增支出</a>
<div class="container col-3">
  <form action="/search" method="GET">
    <div class="row">
      <select type="submit" class="text-center" id="categorySearch" name="categoryId" style="" onchange="this.form.submit()">
        <option value="6" {{#ifEquals 6 id }}selected{{/ifEquals}}>所有</option>
        <option value="1" {{#ifEquals 1 id }}selected{{/ifEquals}}>家居</option>
        <option value="2" {{#ifEquals 2 id }}selected{{/ifEquals}}>交通</option>
        <option value="3" {{#ifEquals 3 id }}selected{{/ifEquals}}>娛樂</option>
        <option value="4" {{#ifEquals 4 id }}selected{{/ifEquals}}>餐飲</option>
        <option value="5" {{#ifEquals 5 id }}selected{{/ifEquals}}>其他</option>
      </select>
    </div>
  </form>


  <!--總金額-->
  <div class="row">
    <p class="row mb-0">總金額:</p>
    <p class="text-center" style="color: black; font-size: 100px;">{{ total }}</p>
  </div>



  <!--項目-->
  <div class="row mt-1">
    <ul class="list-group">
      {{#each expense}}
      <li class="list-group-item">
        <div class="row">
          <div class="col-8">
            <div class="col-1">
              {{#ifEquals 1 this.categoryId}}<i class="fa-solid fa-house"></i>{{/ifEquals}}
              {{#ifEquals 2 this.categoryId}}<i class="fa-solid fa-van-shuttle"></i>{{/ifEquals}}
              {{#ifEquals 3 this.categoryId}}<i class="fa-solid fa-face-grin-beam"></i>{{/ifEquals}}
              {{#ifEquals 4 this.categoryId}}<i class="fa-solid fa-utensils"></i>{{/ifEquals}}
              {{#ifEquals 5 this.categoryId}}<i class="fa-solid fa-pen"></i>{{/ifEquals}}
            </div>
            <div class="col-8">
              <h4 style="font-size: 35px">
                {{this.name}}
                <span class="col-5 ">
                  <p class="col text-end align-text-bottom" style="font-size: 35px; color:red">
                    ${{this.amount}}
                  </p>
                </span>
              </h4>
              <p>{{this.date}}</p>
            </div>
          </div>
          <div class="col-sm mt-5 p-2">
            <a class="btn btn-warning" href="./expenses/{{ this._id }}/edit">edit</a>
            <form action="./expenses/{{ this._id }}?_method=DELETE" method="POST" style="display: inline">
              <button class="btn btn-danger" type="submit">delete</button>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>